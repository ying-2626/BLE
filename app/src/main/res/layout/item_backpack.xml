<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            android:id="@+id/deleteBackpackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除设备"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            app:layout_constraintTop_toBottomOf="@+id/backpackInfoText" />

        <Button
            android:id="@+id/bluetoothButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝牙连接"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@+id/deleteBackpackButton"
            app:layout_constraintTop_toBottomOf="@+id/backpackInfoText" />

        <Button
            android:id="@+id/checkTagButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看物品"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toStartOf="@+id/bluetoothButton"
            app:layout_constraintTop_toBottomOf="@+id/backpackInfoText" />

        <TextView
            android:id="@+id/backpackInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dp"
            android:textColor="@color/deep_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/backpack" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>