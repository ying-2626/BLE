<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 渐变背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3F51B5"
                android:endColor="@color/purple_500"
                android:angle="90"/>
        </shape>
    </item>
    <!-- 顶部高光线 -->
    <item
        android:height="2dp"
        android:gravity="top">
        <shape android:shape="rectangle">
            <solid android:color="#66FFFFFF"/>
        </shape>
    </item>
</layer-list>